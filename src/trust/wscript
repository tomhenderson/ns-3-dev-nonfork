# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('trust', ['core', 'network'])
    module.source = [
        'model/trust-manager.cc',
        'model/trust-entry.cc',
        'model/trust-table.cc',
        ]

    module_test = bld.create_ns3_module_test_library('trust')
    module_test.source = [
        'test/trust-test-suite.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'trust'
    headers.source = [
        'model/trust-manager.h',
        'model/trust-entry.h',
        'model/trust-table.h',
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

